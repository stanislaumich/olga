unit FDataFind;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.Grids, Vcl.StdCtrls, DynamicList;

type
  TFindForm = class(TForm)
    FindSG: TStringGrid;
    Label2: TLabel;
    ComboBox1: TComboBox;
    Button1: TButton;
    procedure FormCreate(Sender: TObject);
    procedure ComboBox1Select(Sender: TObject);
    procedure Button1Click(Sender: TObject);
    procedure FindList(First: pItem);
   // Procedure FindListInit(First: pItem);
    Procedure ClearTable;
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  FindForm: TFindForm;
  var Find: pItem;
implementation

{$R *.dfm}
procedure TFindForm.ClearTable;
var i:word;
begin
with FindSG do
  for i:=0 to ColCount-1 do
    Cols[i].Clear;
end;

{Procedure TFindForm.FindListInit(First: pItem);
begin
//Combobox2.Items.Clear;
if (Combobox1.Text = 'Тип зачетной единицы') then begin
//showMessage('True');
while First<>Nil do begin
//showMessage(First^.Data.SubType);
Combobox2.Items.Add(First^.Data.SubType);
First:=First^.Next;
end;
Combobox2.Items.Add('Зачет');
Combobox2.Items.Add('Диференцированный зачет');
Combobox2.Items.Add('Экзамен');
Combobox2.Items.Add('Курсовая работа');
end
else begin
  while First<>Nil do begin
Combobox2.Items.Add(First^.Data.subject);
First:=First^.Next;
  end;
end;
end;   }

Procedure TFindForm.FindList(First: pItem);
var j: word;
begin
j:=1;
if Combobox1.Text<>'' then
begin
while First<>Nil do begin
if First^.Data.SubType = Combobox1.Text then
begin
FindSG.Cells[0,j]:=IntToStr(First^.Data.Number);
              FindSG.Cells[1,j]:=First.Data.SubType;
              FindSG.Cells[2,j]:=First.Data.subject;
              FindSG.Cells[3,j]:=First.Data.Count;
              FindSG.Cells[4,j]:=First.Data.mark;
              FindSG.Cells[5,j]:=DateToStr(First.Data.Date);
              FindSG.Cells[6,j]:=First.Data.surname;
              FindSG.Cells[7,j]:=IntToStr(First.Data.semester);
              inc(j);
              First:=First^.Next;

end
else
First:=First^.Next;
if (FindSG.Cells[0,1]='') and (First = Nil)  then
begin
ShowMessage('Запись не найдена');
exit;
end;
end;
end;
end;
{if Combobox1.Text = 'Предмет' then begin
  //       showMessage('Edit');
  while First^.Next<>Nil do begin
if First^.Data.subject = Combobox2.Text then
begin
FindSG.Cells[0,j]:=IntToStr(First^.Data.Number);
              FindSG.Cells[1,j]:=First.Data.SubType;
              FindSG.Cells[2,j]:=First.Data.subject;
              FindSG.Cells[3,j]:=First.Data.Count;
              FindSG.Cells[4,j]:=First.Data.mark;
              FindSG.Cells[5,j]:=DateToStr(First.Data.Date);
              FindSG.Cells[6,j]:=First.Data.surname;
              FindSG.Cells[7,j]:=IntToStr(First.Data.semester);
              inc(j);
              First:=First^.Next;
end;
end; }


procedure TFindForm.Button1Click(Sender: TObject);
begin
ClearTable;
//ShowMessage(First^.Data.subject);
FindList(First);
end;

procedure TFindForm.ComboBox1Select(Sender: TObject);
begin
//FindListInit(First);
end;

procedure TFindForm.FormCreate(Sender: TObject);
begin
FindSG.Cells[0,0]:=('Номер');
FindSG.Cells[1,0]:=('Тип');
FindSG.Cells[2,0]:=('Наименование');
FindSG.Cells[3,0]:=('Кол-во з/е');
FindSG.Cells[4,0]:=('Оценка');
FindSG.Cells[5,0]:=('Дата');
FindSG.Cells[6,0]:=('Преподаватель');
FindSG.Cells[7,0]:=('Семестр');
Combobox1.Items.Add('Зачет');
Combobox1.Items.Add('Диференцированный зачет');
Combobox1.Items.Add('Экзамен');
Combobox1.Items.Add('Курсовая работа');
end;

end.
