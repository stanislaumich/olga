{$R *.dfm}

procedure TForm1.Button1Click(Sender: TObject);
begin
 {проверка пустой строки}
 if EDit1.Text='' then
  showMessage('Ќельз€ добавл€ть пустую строку')
 else
 {добавление строки в конец списка}
 Listbox1.Items.Add(EDit1.Text);
end;

procedure TForm1.Button2Click(Sender: TObject);
var
 n:integer;
begin
 {преобразуем строку в число}
 n:=strtoint(edit2.Text);
 {ѕроверим, есть ли строка с таким пор€дковым номером}
 if N>Listbox1.count then
  ShowMessage('«адано удаление несуществующей строки')
 else
  {удал€ем строку, нумераци€ в компоненте начинаетс€ с 0}
  Listbox1.Items.Delete(N-1);
end;

